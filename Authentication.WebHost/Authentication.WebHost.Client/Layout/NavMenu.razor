@using Authentication.Shared.Model
@using Microsoft.AspNetCore.Components.Authorization
<div class="top-row ps-3 navbar navbar-dark">
	<div class="container-fluid">
		<a class="navbar-brand" href="">Authentication</a>
	</div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
	<nav class="nav flex-column">
		<div class="nav-item px-3">
			<NavLink class="nav-link" href="/home" Match="NavLinkMatch.All">
				<span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
			</NavLink>
		</div>
		
		<AuthorizeView Policy="@Permission.ManageUser">
			<Authorized>
				<div class="nav-item px-3">
					<NavLink class="nav-link" href="weather">
						<span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> User
					</NavLink>
				</div>
			</Authorized>
		</AuthorizeView>

		<AuthorizeView Policy="@Permission.ManageUser">
			<Authorized>
				<div class="nav-item px-3">
					<NavLink class="nav-link" href="/manage-user">
						<span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Manage User
					</NavLink>
				</div>
			</Authorized>
		</AuthorizeView>
		<AuthorizeView Policy="@Permission.ViewReports">
			<Authorized>
				<div class="nav-item px-3">
					<NavLink class="nav-link" href="/view-reports">
						<span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> View Reports
					</NavLink>
				</div>
			</Authorized>
		</AuthorizeView>
	</nav>
</div>

